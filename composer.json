{
    "name": "luket/beamauth",
    "description": "Allow users to login via beam.pro",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Luke Thompson",
            "email": "luke@thompsonuk.me"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/flarum/auth-facebook"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.3",
        "league/oauth2-facebook": "~1.0",
        "league/oauth2-client": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "LukeT\\BeamAuth\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Beam Login",
            "icon": {
                "name": "tree",
                "backgroundColor": "#FF0",
                "color": "#00F"
            }
        }
    }
